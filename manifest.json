{
  "name": "S-Solver",
  "description": "Solver for a certain puzzle",
  "manifest_version": 3,
  "version": "0.0",
  "author": "Kieran Adler",
  "permissions": ["activeTab", "scripting", "nativeMessaging"],
  "icons": {
    "128": "128.png"
  },
  "action": {
    "default_icon": "128.png",
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://squaredle.app/", "https://squaredle.app/*"],
      "js": ["solver.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ]
}
